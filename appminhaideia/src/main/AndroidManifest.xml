<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="luiz.appminhaideia">

    <!--permissão liver, não precisa da autorização do usuário-->
    <uses-permission android:name="android.permission.INTERNET"/>
    <!--precisa pedir ao usuário para ativar estas permissões-->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/><!--localização aproximada-->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/><!--localização precisa-->

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppMinhaIdeia">
        <activity android:name=".view.MainActivity"/>
        <activity android:name=".view.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>